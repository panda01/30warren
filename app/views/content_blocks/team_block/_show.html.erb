<div class="content-block <%= css_class(cb) %>"
     id="<%= css_id(cb) %>"
     data-advance-width="<%= cb.advance_width %>">
  <header>
    <h2><%= cb.title %></h2>

    <% if cb.subtitle? %>
      <h3><%= cb.subtitle %></h3>
    <% end %>
  </header>

  <div class="body">
    <%= f cb.body %>
  </div>
</div>
