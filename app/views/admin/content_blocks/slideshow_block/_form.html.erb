<div class="slides">
  <div class="field">
    <%= field.check_box :is_panorama %>
    <%= field.label :is_panorama, 'Panorama?' %>
  </div>

  <div class="field">
    <%= field.check_box :contained %>
    <%= field.label :contained, 'Prevent image cropping?' %>
  </div>

  <%= field.fields_for :slides do |f| %>
    <%= render 'admin/content_blocks/slideshow_block/slide', f: f %>
  <% end %>
</div>

<%= field.new_slideshow_slide_button('Add A Slide', type: :image) %>
