<div class="header-module <%= 'logging-in' unless @current_user %>">
  <% if @current_user %>
      <div class="toolbar">
          <ul class="navigation project-links">
            <li><%= link_to('Home', admin_root_path, class: 'home') %></li>
            <li>
              <div class="dropdown-wrapper">
                  <div class="dropdown-selected">
                    <%= resource_class.to_title.pluralize %>
                  </div>
                  <ul class="dropdown-list">
                    <% Brb::Engine.admin_classes.each do |klass| %>
                      <%= dropdown_item(klass) %>
                    <% end %>
                  </ul>
              </div>
            </li>
          </ul>
          <ul class="navigation user-links">
            <li><%= link_to(@current_user.username, edit_admin_user_path(@current_user)) %></li>
            <li><%= link_to('Log out', admin_logout_path) %></li>
          </ul>
      </div>
  <% end %>
</div>
